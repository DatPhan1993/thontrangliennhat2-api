{
  "version": 2,
  "routes": [
    { "src": "/api/products/(.*)", "dest": "/api/products/$1" },
    { "src": "/api/services/(.*)", "dest": "/api/services/$1" },
    { "src": "/api/experiences/(.*)", "dest": "/api/experiences/$1" },
    { "src": "/api/news/(.*)", "dest": "/api/news/$1" },
    { "src": "/api/upload", "dest": "/api/upload.js" },
    { "handle": "filesystem" }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}