{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, PATCH, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Credentials": "true",
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    { "src": "/products/(.*)", "dest": "/api/products/$1" },
    { "src": "/services/(.*)", "dest": "/api/services/$1" },
    { "src": "/experiences/(.*)", "dest": "/api/experiences/$1" },
    { "src": "/news/(.*)", "dest": "/api/news/$1" },
    { "src": "/upload", "dest": "/api/upload.js" },
    { "src": "/database.json", "dest": "/api/database.js" },
    { "src": "/thontrangliennhat-api/database.json", "dest": "/api/database.js" },
    { 
      "src": "/images/(.*)", 
      "dest": "/images/$1",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    { 
      "src": "/uploads/(.*)", 
      "dest": "/uploads/$1",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    { "handle": "filesystem" }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3001"
  }
} 